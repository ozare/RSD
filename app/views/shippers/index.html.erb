<h1>Listing shippers</h1>

<%= form_tag shippers_path, :method => 'get', :label => false do %>
    <%= text_field_tag :search, params[:search] , :wrapper => :prepend%>
    <%= submit_tag "Search", :name => nil , :class => 'btn-primary'%>
<% end %>

<table class="table table-bordered table-striped">
  <tr>
    <th>Company</th>
    <th>Lastname</th>
    <th>Firstname</th>
    <th>Phone</th>
    <th>Address</th>
    <th>City</th>
    <th>Country</th>
    <th></th>
    
    <th></th>
  </tr>

<% @shippers.each do |shipper| %>
  <tr>
    <td><%= shipper.Company %></td>
    <td><%= shipper.LastName %></td>
    <td><%= shipper.FirstName %></td>
    <td><%= shipper.Phone %></td>
    <td><%= shipper.Address %></td>
    <td><%= shipper.City %></td>
    <td><%= shipper.Country %></td>
   
    <td><%= link_to 'Edit', edit_shipper_path(shipper) %></td>
    <td><%= link_to 'Destroy', shipper, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Shipper', new_shipper_path %>
