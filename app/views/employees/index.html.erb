<h1>Listing employees</h1>

<%= form_tag employees_path, :method => 'get', :label => false do %>
    <%= text_field_tag :search, params[:search] , :wrapper => :prepend%>
    <%= submit_tag "Search", :name => nil , :class => 'btn-primary'%>
<% end %>

<table class="table table-bordered table-striped">
  <tr>
    <th>Company</th>
    <th>Lastname</th>
    <th>Firstname</th>
    <th>Phone</th>
    <th>Address</th>
    <th>City</th>
    <th>Country</th>
    <th></th>
   
    <th></th>
  </tr>

<% @employees.each do |employee| %>
  <tr>
    <td><%= employee.Company %></td>
    <td><%= employee.LastName %></td>
    <td><%= employee.FirstName %></td>
    <td><%= employee.Phone %></td>
    <td><%= employee.Address %></td>
    <td><%= employee.City %></td>
    <td><%= employee.Country %></td>
    
    <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
    <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Employee', new_employee_path %>
